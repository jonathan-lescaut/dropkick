{% extends 'base.html.twig' %}

{% block title %}Products index{% endblock %}

{% block body %}
<section class="pageProduct navbarMargin">



    <h1>Products index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NameProduct</th>
                <th>imgProduct</th>
                <th>PriceProduct</th>
                <th>ContentProduct</th>
                <th>Category</th>
                <th>Pub</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.nameProduct }}</td>
                <td><img src="{{ asset('uploads/photos/' ~ product.imgProduct) }}" width="100"></td>
                <td>{{ product.priceProduct }}</td>
                <td>{{ product.contentProduct }}</td>
                <td>{{ product.categories.nameCategory }}</td>

                <td>
                {{product.pub.namePub}}
                </td>
                <td>
                    <a href="{{ path('products_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('products_edit', {'id': product.id}) }}">edit</a>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('products_new') }}">Create new</a>
    </section>
{% endblock %}
