{{ form_start(form) }}
     <form>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Le nom du produit</label>
        <div class="col-sm-10">
            {{ form_widget(form.nameProduct) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Image du produit</label>
        <div class="col-sm-10">
            {{ form_widget(form.imgProduct) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Le prix</label>
        <div class="col-sm-10">
            {{ form_widget(form.priceProduct) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
            {{ form_widget(form.contentProduct) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Produit star</label>
        <div class="col-sm-10">
            {{ form_widget(form.productStar) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Choix du pub</label>
        <div class="col-sm-10">
            {{ form_widget(form.pub) }}
        </div>
    </div>
        <div class="form-group row">
        <label class="col-sm-2 col-form-label">Choix du pub</label>
        <div class="col-sm-10">
            {{ form_widget(form.categories) }}
        </div>
    </div>

  </form>
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
