{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

<section class="cart navbarMargin">
<h1>Votre panier {{app.user.pubs.cityPub}}</h1>

    <a href=javascript:history.go(-1)>Revenir au pub</a>

    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Image</th>
                <th>Prix</th>
                <th>quantité</th>
                <th>total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for element in dataCart %}
            {% if element.pub.cityPub ==  app.user.pubs.cityPub %}
            
            <tr>
                <td>{{element.product.nameProduct}}</td>
                <td><img src="{{ asset('uploads/photos/' ~ element.product.imgProduct) }}" width="100"></td>
                <td>{{element.product.priceProduct}} €</td>
                <td>{{element.quantite}}</td>
                <td>{{element.quantite * element.product.priceProduct}}</td>
                <td>
                    <a href="{{path("cart_add", {product: element.product.id})}}" class="btn btn-success">Ajouter</a>
                    <a href="{{path("cart_remove", {id: element.product.id})}}" class="btn btn-warning">Enlever</a>
                    <a href="{{path("cart_delete", {id: element.product.id})}}" class="btn btn-danger">Supprimer</a>
                </td>

            </tr>
            {% else %}

                {% endif %}
            {% else %}
                <tr>
                    <td colspan ="6" class="text-center">Votre panier est vide</td>
                </tr>
            {% endfor %}
        </tbody>

        <tfoot>
            <tr>
                <td colspan="3">total</td>
                
                <td class="text-end">{{ total }} €</td>
                <td> <a href="{{path("cart_delete_all")}}" class="btn btn-danger">Supprimer le panier</a></td>
            </tr>





        </tfoot>
    </table>
</section>

<section class="cart navbarMargin">
    <table class="table">
        <thead>
<tr>
    <th colspan="3">
        Ma commande
    </th>
</tr>

        </thead>
        <tbody>
            <tr>
                <td> <a href="#" class="btn btn-success">Commander</a></td>
                <td colspan="2">
                    <select>
                        <option value="" selected disabled hidden>Choisir créneau horaire</option>
                        <option value="17H30 18H00">17H30 18H00</option>
                        <option value="18H00 18H30">18H00 18H30</option>
                        <option value="19H00 19H30">19H00 19H30</option>
                        <option value="20H00 20H30">20H00 20H30</option>
                        <option value="21h00 21H30">21h00 21H30</option>
                        <option value="22h00 22H30">22h00 22H30</option>
                    </select>
                </td>
            </tr>
        </tbody>
        <tfoot>

        </tfoot>
    </table>



</section>





{% endblock %}
