{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<section class="pageUser navbarMargin">

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>

            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>LastNameUser</th>
                <td>{{ user.lastNameUser }}</td>
            </tr>
            <tr>
                <th>FirstNameUser</th>
                <td>{{ user.firstNameUser }}</td>
            </tr>
            <tr>
                <th>AddressUser</th>
                <td>{{ user.addressUser }}</td>
            </tr>
            <tr>
                <th>CityUser</th>
                <td>{{ user.cityUser }}</td>
            </tr>
            <tr>
                <th>CpUser</th>
                <td>{{ user.cpUser }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
    </section>

