{% extends 'admin.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block body %}
<section class="pageCategorie navbarMargin">

    <h1>Toutes les categories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.nameCategory }}</td>
                <td>
                    <a href="{{ path('categories_edit', {'id': category.id}) }}" class="btnModifUser">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categories_new') }}" class="btn btn-primary">Créer nouvelle catégorie</a>
    </section>

{% endblock %}
