{% extends 'base.html.twig' %}

{% block title %}Pubs index{% endblock %}

{% block body %}
<section class="pagePub navbarMargin">

    <h1>Nos pubs</h1>

        {% for pub in pubs %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4">
                        <div class="pubName">{{ pub.namePub }}</div>
                        <div class="pubAddress">{{ pub.addressPub }} {{ pub.cpPub }} {{ pub.cityPub }}</div>
                        <div class="pubPhone">{{ pub.phonePub }}</div>
                        <div class="pubImg"><img src="{{ asset('uploads/photos/' ~ pub.imgPub) }}" width="100"></div>
                        <div class="pubContent">{{ pub.contentPub }}</div>
                    </div>
                    <div class="col-md-2 schedulePub">
                        <div>{{ pub.schedulePub|raw }}</div>
                    </div>
                    <div class="col-md-6">
                        {{ pub.iframePub|raw }}
                    </div>
                </div>
                <td>
                    <a href="{{ path('pubs_show', {'id': pub.id}) }}">show</a>
                    <a href="{{ path('pubs_edit', {'id': pub.id}) }}">edit</a>
                </td>
            {% endfor %}
        </section>
        <a href="{{ path('pubs_new') }}">Create new</a>

{% endblock %}
