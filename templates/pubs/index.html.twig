{% extends 'base.html.twig' %}

{% block title %}Pubs index{% endblock %}

{% block body %}
<section class="pagePub navbarMargin">

    <h1>Nos pubs</h1>

        {% for pub in pubs %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <div>{{ pub.namePub }}</div>
                        <div>{{ pub.addressPub }}</div>
                        <div>{{ pub.phonePub }}</div>
                        <div><img src="{{ asset('uploads/photos/' ~ pub.imgPub) }}" width="100"></div>
                        <div>{{ pub.contentPub }}</div>
                    </div>
                    <div class="col-md-6">
                        {{ pub.iframePub }}
                    </div>
                </div>
            
                <td>
                    <a href="{{ path('pubs_show', {'id': pub.id}) }}">show</a>
                    <a href="{{ path('pubs_edit', {'id': pub.id}) }}">edit</a>
                </td>
            {% endfor %}
            


        </section>
        <a href="{{ path('pubs_new') }}">Create new</a>

{% endblock %}
